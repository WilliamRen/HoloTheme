<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- This is the line -->
    <item>
        <shape>
            <solid android:color="@color/ab_underline" />
        </shape>
    </item>
    <!-- This is the main color -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="@color/ab_top"
                android:startColor="@color/ab_bottom" />
        </shape>
    </item>

</layer-list>