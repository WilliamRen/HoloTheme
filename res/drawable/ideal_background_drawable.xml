<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list> <!-- pressed -->

            <item><nine-patch android:src="@drawable/shdw_5_0_5_testing_neon_green"></nine-patch></item>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/grey_50" />

                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

                    <stroke android:width="2dp" android:color="@color/holo_blue_light" />
                </shape></item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp"><bitmap android:src="@drawable/nse_5" android:tileMode="repeat"></bitmap></item>
        </layer-list></item>
    <item><layer-list> <!-- default -->

            <item><nine-patch android:src="@drawable/shdw_5_0_5_testing_neon_green"></nine-patch></item>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/grey_15" />

                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

                    <stroke android:width="2dp" android:color="@color/grey_20" />
                </shape></item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp"><bitmap android:src="@drawable/nse_5" android:tileMode="repeat"></bitmap></item>
        </layer-list></item>

</selector>